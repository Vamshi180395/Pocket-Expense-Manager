<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.PocketExpenseManager.LoginFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:id="@+id/userid"
        android:layout_gravity="left|top"
     android:layout_marginTop="180dp"

        android:layout_marginLeft="90dp"
        android:hint="Enter username"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_gravity="left"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="90dp"
        android:hint="Enter Password"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btnexit"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnlogin"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:onClick="goToAppActivity"/>

    <TextView
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Not yet a member -> Register Today"
        android:id="@+id/txtgotoregister"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="3dp"
        android:linksClickable="true"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/imageView8"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/logo0" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/forgotpasswordimage"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/forgotpassword" />

    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/googlesignin"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="140dp"
    />

</FrameLayout>
